#include "temper.dtsi"

&default_transform {
    col-offset = <5>;
};

&kscan0 {
    col-gpios
        = <&pro_micro 15 GPIO_ACTIVE_HIGH>
        , <&pro_micro 18 GPIO_ACTIVE_HIGH>
        , <&pro_micro 19 GPIO_ACTIVE_HIGH>
        , <&pro_micro 20 GPIO_ACTIVE_HIGH>
        , <&pro_micro 21 GPIO_ACTIVE_HIGH>
        ;
};

/* Enable I2C bus used by the trackpad */
&i2c0 {
    status = "okay";

    trackpad: iqs5xx@74 {
        compatible = "azoteq,iqs5xx";
        reg = <0x74>;

        /* ⚠️ VERIFY THESE GPIOs */
        rdy-gpios   = <&pro_micro 14 GPIO_ACTIVE_HIGH>;
        reset-gpios = <&pro_micro 16 GPIO_ACTIVE_LOW>;

        one-finger-tap;
        two-finger-tap;
        scroll;
        natural-scroll-y;
    };
};

/* Register trackpad as a ZMK input device */
&main {
    trackpad_input: trackpad_listener {
        compatible = "zmk,input-listener";
        device = <&trackpad>;
    };
};

/ {
    chosen {
        /delete-property/ zephyr,display;
    };
};
